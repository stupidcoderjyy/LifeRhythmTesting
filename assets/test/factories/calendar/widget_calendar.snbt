{
    min_width: 500
    min_height: 500
    children: ["top", "slots"]
    layout: {
        type: "Vertical"
        margins: [0,0,0,0]
    }
    top: {
        v_size_policy: "Max"
        children: ["btnPrev", "btnNext", "btnMc", "dp", "btnWeek", "btnMonth"]
        qss: "bg(GRAY_0)"
        layout: {
            type: "Horizontal"
            margins: [0,0,0,0]
            spacing: 2
            spacers: [{
                pos: 3
                h_size_policy: "Expanding"
            }]
        }
        btnPrev: {
            type: "ArrowButton"
            base: "Left"
            activated: "Left"
            pointer: true
        }
        btnMc: {
            loader: "test:calendar/dropdown_mini_calendar"
            pointer: true
        }
        btnNext: {
            type: "ArrowButton"
            base: "Right"
            activated: "Right"
            pointer: true
        }
        dp: {
            loader: "test:calendar/dropdown_range"
            pointer: true
        }
        btnWeek: {
            type: "calendar::ButtonSwitchView"
            mode: "Select"
            img: "lr:columns_30x30"
            pointer: true
        }
        btnMonth: {
            type: "calendar::ButtonSwitchView"
            mode: "Select"
            img: "lr:table_30x30"
            pointer: true
        }
    }
    slots: {
        type: "calendar::SlotsWidgetCalendar"
        pointer: true
    }
}