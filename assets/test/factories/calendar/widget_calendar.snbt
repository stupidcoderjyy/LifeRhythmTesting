        children: ["btnPrev", "btnMc", "btnNext", "dp", "btnWeek", "btnMonth"]
        layout: {
            type: "Horizontal"
            margins: [0,0,0,0]
            spacing: 2
            spacers: [{
                pos: 3
                h_size_policy: "Expanding"
            }]
        }
